{
	"extends": [
		"tslint:recommended",
		"tslint-react",
		"tslint-config-prettier"
	],
	"rules": {
		"max-line-length": {
			"options": [
				120
			]
		},
		"quotemark": [
			true,
			"single",
			"jsx-double"
		],
		"curly": false,
		"semicolon": false,
		"no-console": false,
		"no-var-requires": false,
		"interface-over-type-literal": false,
		"jsx-boolean-value": false,
		"object-literal-sort-keys": false,
		"member-access": [
			true,
			"no-public"
		],
		"ordered-imports": false,
		"no-unused-expression": [
			true,
			"allow-fast-null-checks"
		],
		"jsx-no-lambda": false,
		"interface-name": false,
		"no-shadowed-variable": false,
		"member-ordering": [
			false
		],
		"trailing-comma": [
			true,
			{
				"multiline": {
					"objects": "always",
					"arrays": "always",
					"functions": "always",
					"typeLiterals": "ignore"
				}
			}
		],
		"no-empty": false,
		"no-submodule-imports": false,
		"no-implicit-dependencies": false,
		"no-constant-condition": false,
		"triple-equals": [
			true,
			"allow-undefined-check"
		],
		"jsx-alignment": true,
		"jsx-no-bind": true
	},
	"linterOptions": {
		"exclude": [
			"node_modules/**/*.ts",
			"src/**/*.js"
		]
	}
}
